<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/app_title_color"
    android:gravity="center_vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买数量:" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shop_shape_left"
        android:gravity="center"
        android:text="—" />

    <TextView
        android:id="@+id/numText"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#eee"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/addText"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_shape_right"
        android:gravity="center"
        android:text="+" />

    <TextView
        android:id="@+id/allCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="￥3900"
        android:textColor="@color/red_btn_bg_color" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/confirmBt"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:text="购  买"
        android:textColor="#fff"
        app:qmui_backgroundColor="@drawable/selector_bt_color"
        app:qmui_borderWidth="0dp"
        app:qmui_isRadiusAdjustBounds="true" />

</LinearLayout>

