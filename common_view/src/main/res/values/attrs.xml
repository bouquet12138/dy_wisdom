<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="MyCalendarView">
        <attr name="titleSize" format="dimension" /><!--标题栏文字大小-->
        <attr name="titleColor" format="color" /><!--标题栏文字颜色-->

        <attr name="daySize" format="dimension" /><!--日期文字大小-->
        <attr name="dayColor" format="color" /><!--日期文字颜色-->

        <attr name="spaceY" format="dimension" /><!--间距-->

        <attr name="drawLunar" format="boolean" /><!--是否绘制阴历-->
        <attr name="lunarSize" format="dimension" /><!--阴历文字大小-->
        <attr name="lunarColor" format="color" /><!--阴历文字颜色-->

        <attr name="legalColor" format="color" /><!--法定节假日的颜色-->

        <attr name="todayCircleColor" format="color" /><!--今天那个圆的颜色-->
        <attr name="todayTextColor" format="color" /><!--今天文本的颜色-->
        <attr name="todayCircleRadius" format="dimension" /><!--今天那个圆的半径-->

        <attr name="selectedTextColor" format="color" /><!--选中的文字颜色-->
        <attr name="selectedBackColor" format="color" /><!--选中的背景色-->

    </declare-styleable>

    <declare-styleable name="DatePickerView">
        <attr name="maxTextSize" format="dimension" /><!--最大文字尺寸-->
        <attr name="minTextSize" format="dimension" /><!--最小文字尺寸-->
        <attr name="maxTextAlpha" format="integer" /><!--最大透明度-->
        <attr name="minTextAlpha" format="integer" /><!--最小透明度-->

        <attr name="data1Color" format="color" /> <!--数据1的颜色-->
        <attr name="data2Color" format="color" /><!--数据2的颜色-->

    </declare-styleable>


    <declare-styleable name="ClipView">

        <attr name="shape" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>

        <attr name="translucentColor" format="color" /><!--半透明背景的颜色-->
        <attr name="fraction" format="fraction" /><!--简而言之就是白色区域占宽高的百分比-->
        <attr name="strokeWidth" format="dimension" /><!--描边宽-->
        <attr name="strokeColor" format="color" /><!--描边颜色-->

    </declare-styleable>

    <!--底部View-->
    <declare-styleable name="MyEditText">
        <attr name="hint" format="string" />
        <attr name="maxLength" format="integer" />
        <attr name="maxLines" format="integer" />
        <attr name="inputType" format="enum">

            <enum name="text" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="number" value="2" />
            <enum name="number_password" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="waveFillType" format="integer" /><!--0为Top 1为bottom-->
        <attr name="waveAmplitude" format="dimension" /><!--波纹的振幅决定了波纹的高度-->
        <attr name="waveColor" format="color" /><!--振幅的颜色-->
        <attr name="waveNum" format="float" /><!--波纹数-->
        <attr name="waveStart" format="boolean" /><!--是否开始动画-->
        <attr name="startPeriod" format="float" /><!--开始的周期-->
        <attr name="waveSpeed" format="float" /><!--水波速度-->
        <attr name="PrimaryPhase" format="float" /><!--初相-->
    </declare-styleable>


    <!--底部View-->
    <declare-styleable name="BottomNavigationView">
        <attr name="selectedRatio" format="integer" />
        <attr name="unSelectedRatio" format="integer" />
        <attr name="imgWidth" format="dimension" />
        <attr name="imgHeight" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" /><!--文字尺寸-->
    </declare-styleable>

</resources>