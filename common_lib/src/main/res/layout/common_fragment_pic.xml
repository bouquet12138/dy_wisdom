<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bm.library.PhotoView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.bm.library.PhotoView>


    <RelativeLayout
        android:id="@+id/progressViewGroup"
        android:visibility="gone"
        android:background="#4000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qmuiteam.qmui.widget.QMUIProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="14dp"
            app:qmui_background_color="?attr/qmui_config_color_gray_8"
            app:qmui_progress_color="#fff"
            app:qmui_stroke_width="5dp"
            app:qmui_type="type_circle" />

    </RelativeLayout>


</RelativeLayout>